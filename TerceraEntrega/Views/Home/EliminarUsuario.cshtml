@{
    ViewBag.Title = "EliminarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div>
        <h3>Eliminar Usuario</h3>
        <style>
            .boton-azul {
                background-color: #35B2FF;
                border: none;
                color: white;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 14px;
                margin: 4px 2px;
                transition-duration: 0.4s;
                cursor: pointer;
                border-radius: 6px;
                border: 2px solid #35B2FF;
            }

                .boton-azul:hover {
                    background-color: white;
                    color: #35B2FF;
                }
        </style>
        <!-- Formulario para ingresar la cédula del usuario a eliminar -->
        <form action="@Url.Action("VerificarEliminarUsuario", "Home")" method="post">
            <label>Cédula del usuario:</label>
            <input type="text" name="cedula" />
            <input type="submit" value="Eliminar" class="boton-azul"/>
        </form>
        <!-- Mensaje de notificación de error o éxito -->
        @if (!string.IsNullOrEmpty(ViewBag.Notificacion))
        {
            <div class="alert alert-danger">@ViewBag.Notificacion</div>
        }
    </div>
</body>
</html>

